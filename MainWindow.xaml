<Window x:Class="DialogMaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DialogMaker" 
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Title="Dialogue Maker V0.1" Height="730" Width="550">
    <StackPanel Height="704" VerticalAlignment="Top">
        <Grid Margin="0,20,0,20" RenderTransformOrigin="0.64,0.412">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25*"></ColumnDefinition>
                <ColumnDefinition Width="38*"></ColumnDefinition>
                <ColumnDefinition Width="12*"></ColumnDefinition>
                <ColumnDefinition Width="25*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock HorizontalAlignment="Left" Grid.Column="0" Text="Speaker" Margin="73,-1,0,1" Width="42" ></TextBlock>
            <ComboBox Name="combo_speakers" Grid.Column="1" Margin="67,-1,6,1"/>
            <RadioButton Name="left_radio" Grid.Column="2"  IsChecked="True" Content="Left"  Grid.ColumnSpan="2" Margin="37,0,25,0" Checked="left_radio_Checked" ></RadioButton>
            <RadioButton Grid.Column="3" Content="Right" Margin="45,0,-45,0" Checked="RadioButton_Checked" ></RadioButton>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Emotions "></TextBlock>
            <ComboBox Grid.Column="0" Name="combo_emo" Margin="0,0,0,10" Width="117"/>
            <TextBlock Grid.Column="1" Text="Branch "></TextBlock>
            <ComboBox Grid.Column="1" Name="combo_branch" Margin="0,0,0,10" Width="117"/>
        </Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Name="n_lines"  TextAlignment="Center" Text="Line: 1"></TextBlock>
            <TextBlock Name="n_chars" Grid.Column="1" TextAlignment="Center" Text="Number of Characters 0/150"></TextBlock>
        </Grid>
        <TextBox TextWrapping="Wrap" x:Name="text" Height="224" Width="396" Keyboard.KeyDown="TextBox_KeyDown" />

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                
            </Grid.ColumnDefinitions>
            <Button Content="Set Style" Grid.Column="3" Margin="0,10,60,10" Height="20" Width="50" Click="set_style"></Button>
            <TextBlock Grid.Column="0" Margin="1,10,0,10" Text="color"></TextBlock>
            <TextBox  Name="color_text" Grid.Column="0" Margin="0,10,5,10" Height="20" Width="90" HorizontalAlignment="Right" ></TextBox>
            <TextBlock Grid.Column="1" Margin="1,10,0,10" Text="speed"></TextBlock>
            <TextBox Name="speed_text" Grid.Column="1" Margin="0,10,5,10" Height="20" Width="90" HorizontalAlignment="Right" ></TextBox>
            <Button Grid.Column="3" Content="Reset" Margin="0,10,-70,10" Height="20" Width="50" Click="Reset_Style_Click" ></Button>
            <CheckBox Name="IsBold_checkbox" IsChecked="False" Content="bold" Grid.Column="2" Margin="0,5,0,10" ></CheckBox>
            <CheckBox Name="IsItalic_checkbox" IsChecked="False"  Content="italic" Grid.Column="2" Margin="0,25,0,10"></CheckBox>
        </Grid>

        <Label Margin="0,10,0,0"  HorizontalContentAlignment="Center" Content="Please Explain all of your actions in Readme, and follow action format"></Label>
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>


            <Label  Grid.Column="0" Content="Action" HorizontalContentAlignment="Right" Margin="0,0,40,0" />
            <TextBox  Grid.Column="1" Margin="0,0,95,0"  Name="action_textbox"></TextBox>

        </Grid>
        <Grid Margin="0,15,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock  Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center">Choice Text</TextBlock>
            <TextBox Grid.Row="1" Grid.Column="0"  HorizontalAlignment="Center" TextWrapping="Wrap" x:Name="choice_text" Width="200" Height="22"  Keyboard.KeyDown="ChoiceKeyDown_text"/>
            <TextBlock Grid.Row="0" Grid.Column="1"  HorizontalAlignment="Center">Choice Branch</TextBlock>
            <TextBox Grid.Row="1" Grid.Column="1"  HorizontalAlignment="Center" TextWrapping="Wrap" x:Name="choice_branch" Width="200" Height="20" Keyboard.KeyDown="ChoiceKeyDown_branch"  />
        </Grid>
        <ListBox  Name="ListBox_Chooices" Height="100" Margin="38,3">

        </ListBox>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Name="prev_btn" Grid.Column="0" Margin="38,20,10,20" Content="Previous line" Click="prev_btn_Click" />
            <Button Name="save_line_btn" Grid.Column="1"  Margin="0,20,0,20" Content="Save Line" Width="70" Click="save_line_btn_Click" />
            <Button Name="delete_btn" Grid.Column="2"  Margin="0,20,0,20" Content="Delete this" Width="70" Click="delete_btn_Click"  />
            <Button Name="next_line_btn" Grid.Column="3" Margin="10,20,37,20" Content="Next line" Click="next_line_btn_Click" />

        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBox Name="name_file_textbox" Grid.Column="0" Text="Dialogue_FileName" ></TextBox>
            <Button Background="DarkCyan" BorderBrush="Green" Name="save_file_btn" Grid.Column="1" Content="Save File" Width="70" Click="save_file_btn_Click"  ></Button>
            <Button Name="load_file_btn" Grid.Column="1" Content="load File"   Grid.ColumnSpan="2" Margin="30,0,0,0" Width="70" Click="load_file_btn_Click" ></Button>
            <Button Grid.Column="3" Content="Open Folder" Width="70" Click="Open_Folder_Click"></Button>
        </Grid>
    </StackPanel>
</Window>
