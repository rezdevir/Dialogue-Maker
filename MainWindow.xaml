<Window x:Class="DialogMaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DialogMaker" 
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Title="Dialogue Maker V 0.1" Height="700" Width="620" Background="AliceBlue">


    <StackPanel   VerticalAlignment="Center" Width="610" >
        <Border Margin="10,2,10,10" Width="550">
            <Border.Effect>
                <DropShadowEffect 
            Color="Black"
            Direction="270"
            ShadowDepth="4"
            Opacity="0.3"
            BlurRadius="15"/>
            </Border.Effect>

            <StackPanel >
                <Grid Margin="0,20,0,20" HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition ></ColumnDefinition>
                        <ColumnDefinition Width="150"></ColumnDefinition>
                        <ColumnDefinition Width="65" ></ColumnDefinition>
                        <ColumnDefinition Width="70" ></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <TextBlock HorizontalAlignment="Center" Grid.Column="0" Text="Speaker"  Margin="10,0,10,0" ></TextBlock>
                    <ComboBox Name="combo_speakers" Grid.Column="1" Margin="10,0,10,0"/>
                    <RadioButton Margin="10,4,10,0"  Name="left_radio" Grid.Column="2"  IsChecked="True"  Content="Left"   Checked="left_radio_Checked" >


                    </RadioButton>
                    <RadioButton Margin="10,4,10,0"  Grid.Column="3" Content="Right"  Checked="right_radio_Checked"  ></RadioButton>
                </Grid>
                <Grid HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"></ColumnDefinition>
                        <ColumnDefinition Width="250"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Emotions "></TextBlock>
                    <ComboBox Grid.Column="0" Name="combo_emo" Margin="0,0,0,10" Width="117" />
                    <TextBlock Grid.Column="1" Text="Branch "></TextBlock>
                    <ComboBox Grid.Column="1" Name="combo_branch" Margin="0,0,0,10" Width="117"/>
                </Grid>

                <Grid Width="500">
                    <Grid.ColumnDefinitions >
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBlock Name="n_lines"  TextAlignment="left" Text="Line: 1"  Margin="50,8,105,0"></TextBlock>
                    <TextBlock Name="n_chars" TextAlignment="Center" Opacity="0.9" Foreground="Gray" Text="Number of Characters 0/150" Margin="235,8,0,0" Grid.ColumnSpan="2"/>
                </Grid>



                <TextBox TextWrapping="Wrap" x:Name="text" Height="90" Width="396" Keyboard.KeyDown="TextBox_KeyDown" MaxLength="150" Background="WhiteSmoke"/>



                <Grid Width="500">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"></ColumnDefinition>
                        <ColumnDefinition Width="100"></ColumnDefinition>
                        <ColumnDefinition Width="60"></ColumnDefinition>
                        <ColumnDefinition Width="90"></ColumnDefinition>
                        <ColumnDefinition Width="80"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0" Margin="0,0,5,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock  Grid.Column="0" VerticalAlignment="Center" Text="Color" ></TextBlock>
                        <TextBox Grid.Column="1" VerticalAlignment="Center"  Name="color_text"  FontSize="10"  ></TextBox>
                    </Grid>



                    <Grid Grid.Column="1" Margin="0,0,5,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="34"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Speed" Grid.ColumnSpan="2" VerticalAlignment="Center"></TextBlock>
                        <TextBox Name="speed_text" Grid.Column="1"  FontSize="10" VerticalAlignment="Center"></TextBox>

                    </Grid>

                    <CheckBox Name="IsBold_checkbox" IsChecked="False" Content="bold" FontWeight="ExtraBold" Grid.Column="2" HorizontalAlignment="Left" Margin="9,5,0,10" ></CheckBox>
                    <CheckBox Name="IsItalic_checkbox" IsChecked="False"  Content="Italic" FontStyle="Italic" HorizontalAlignment="Left"  Grid.Column="2" Margin="10,25,0,10"></CheckBox>

                    <StackPanel  Grid.Column="3" HorizontalAlignment="Center">
                        <RadioButton x:Name="normal_radio_btn" Margin="1,2,0,2" Content="Normal" IsChecked="True" Checked="normal_radio"/>
                        <RadioButton Margin="1,2,0,2" Content="Waving"  Checked="waving_radio"/>
                        <RadioButton Margin="1,2,0,2" Content="Shocking"  Checked="shocking_radio"/>
                        
                    </StackPanel>
                    
                    <StackPanel Grid.Column="4">
                        <Button Content="Set Style" Margin="0,6,0,5" FontWeight="Bold"   Click="set_style"/>
                        <Button  Content="Reset"  Click="Reset_Style_Click"  Background="LightGray" Foreground="Black" BorderThickness="0.3" />
                    </StackPanel>


                </Grid>
            </StackPanel>

        </Border>






        <Border Margin="10,5,10,10" Width="550">

            <Border.Effect>
                <DropShadowEffect 
            Color="Black"
            Direction="270"
            ShadowDepth="4"
            Opacity="0.3"
            BlurRadius="15"/>
            </Border.Effect>

            <StackPanel >
                <Label Margin="0,2,0,10" FontWeight="Bold"  HorizontalContentAlignment="Center" Content="Action and Branch Center"></Label>
                <Grid HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>


                    <Label  Grid.Column="0" Content="Action" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" />
                    <TextBox  Grid.Column="1"  Width="100" Name="action_textbox"  MaxLength="12"  ></TextBox>

                </Grid>

                <Grid Margin="0,10,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock  Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center">Choice Text</TextBlock>
                    <TextBox Grid.Row="1" Grid.Column="0" MaxLength="12" HorizontalAlignment="Center" TextWrapping="Wrap" x:Name="choice_text" Width="200" Height="30"  Keyboard.KeyDown="ChoiceKeyDown_text"/>
                    <TextBlock Grid.Row="0" Grid.Column="1"  HorizontalAlignment="Center">Choice Branch</TextBlock>
                    <TextBox Grid.Row="1" Grid.Column="1" MaxLength="12" HorizontalAlignment="Center" TextWrapping="Wrap" x:Name="choice_branch" Width="200" Height="30" Keyboard.KeyDown="ChoiceKeyDown_branch"  />
                </Grid>
                <ListBox  Name="ListBox_Chooices" Height="100" Margin="38,3">

                </ListBox>
                <Grid Margin="5,5,5,5">
                    <Grid.ColumnDefinitions >
                        <ColumnDefinition ></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Button Margin="3,0,3,0" FontSize="14"  Name="prev_btn" Grid.Column="0"  Content="Previous line" Click="prev_btn_Click" />
                    <Button Margin="3,0,3,0" FontSize="14"  Name="save_line_btn" Grid.Column="1"   Content="Save Line" Click="save_line_btn_Click" />
                    <Button Margin="3,0,3,0" FontSize="14"  Name="delete_btn" Grid.Column="2"   Content="Delete this line"  Click="delete_btn_Click"  />
                    <Button Margin="3,0,3,0" FontSize="14"  Name="next_line_btn" Grid.Column="3"  Content="Next line" Click="next_line_btn_Click" />

                </Grid>

            </StackPanel>
       
        </Border>

        <Grid HorizontalAlignment="Center" Width="550" Margin="5,15,5,5" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBox Name="name_file_textbox" Grid.Column="0" FontSize="12" Text="Dialogue_FileName" Margin="0,0,0,0"></TextBox>
            <Button Background="DarkCyan" BorderBrush="Green" Name="save_file_btn" Grid.Column="1" Content="Save File"  Click="save_file_btn_Click"  Margin="20,0,20,0"></Button>
            <Button Name="load_file_btn" Grid.Column="2" Content="load File"      Click="load_file_btn_Click"  Margin="20,0,20,0"></Button>
            <Button Grid.Column="3" Content="Open Folder"  Click="Open_Folder_Click"  Margin="20,0,20,0"></Button>
            <Button Grid.Column="4" Content="Parameters"  Click="Open_Folder_para_Click"  Margin="20,0,20,0"></Button>
        </Grid>
    </StackPanel>
</Window>
